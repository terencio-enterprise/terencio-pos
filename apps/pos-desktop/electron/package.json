{
  "name": "@terencio/electron",
  "version": "0.0.1",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "electron .",
    "dev": "tsc && concurrently -k \"npm:watch\" \"wait-on http://localhost:5173 && npm:start\""
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "typescript": "^5.3.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0"
  }
}