{
  "name": "terencio-pos-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm build:domain && concurrently -k \"pnpm --filter @terencio/ui dev\" \"pnpm --filter @terencio/electron dev\"",
    "build": "pnpm --filter @terencio/domain build && pnpm --filter @terencio/ui build && pnpm --filter @terencio/electron build",
    "build:domain": "pnpm --filter @terencio/domain build",
    "dist": "pnpm clean && pnpm build && electron-builder",
    "clean": "rimraf dist release apps/**/dist apps/**/node_modules",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "better-sqlite3"
    ]
  }
}