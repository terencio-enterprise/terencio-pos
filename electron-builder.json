{
  "appId": "com.terencio.pos",
  "productName": "Terencio POS",
  "directories": {
    "output": "release"
  },
  "asar": true,
  "files": [
    {
      "from": "apps/pos-desktop/electron/dist",
      "to": "electron"
    },
    {
      "from": "apps/pos-desktop/ui/dist",
      "to": "ui"
    },
    {
      "from": "database/migrations",
      "to": "migrations"
    },
    {
      "from": "apps/pos-desktop/electron/package.json",
      "to": "package.json"
    }
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "win": {
    "target": "nsis"
  },
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage"
  }
}